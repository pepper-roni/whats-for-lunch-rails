<%= turbo_frame_tag "modal" do %>
  <div class="container">
    <h5 class="modal-header">Add Location</h2>
    <div class="modal-body">
      <%= form_with model: @location, url: restaurant_locations_url do |form| %>
        <div class="form-group required">
          <label for="name">Address</label>
          <%= form.text_field :address, class: 'form-control', type: 'text' %>
        </div>
        <div class="form-group">
          <label for="description">City</label>
          <%= form.text_field :city, class: 'form-control', type: 'text'%>
        </div>
        <div class="form-group">
          <label for="description">Country</label>
          <%= form.text_field :country, class: 'form-control', type: 'dropdown'%>
        </div>
        <div class="form-group">
          <label for="description">Province</label>
          <%= form.text_field :province, class: 'form-control', type: 'dropdown'%>
        </div>
        <div class="form-group">
          <label for="description">Postal Code</label>
          <%= form.text_field :postal_code, class: 'form-control', type: 'text'%>
        </div>
        <div class="form-group">
          <label for="description">Postal Code</label>
          <%= form.text_field :postal_code, class: 'form-control', type: 'dropdown'%>
          <%= form.collection_select(:restaurant_id, Restaurant.all, :id, :name, {:selected => @restaurant}) %>
        </div>
          <%= form.submit "Save", class: 'btn btn-primary', type: 'submit' %>
      <% end %>
    </div>
  </div>
<% end %>